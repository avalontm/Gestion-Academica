@page "/account"

@model sga.Pages.Account.IndexModel
@using Microsoft.AspNetCore.Components.Web
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
	Layout = "_Layout";
}

<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<div class="login100-pic js-tilt" data-tilt>
					<img src="media/img-01.png" alt="LOGO">
				</div>

			<form asp-page="/account" asp-route-returnUrl="@Url.Page("/", new { area = ""})" class="login100-form validate-form" method="post">
				  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<span class="login100-form-title">
						Conectarme
					</span>

					<div class="wrap-input100 validate-input" data-validate = "Es requerido un correo valido: ex@abc.xyz">
					<input class="input100" type="text" name="email" placeholder="Correo" required value="@Model.email">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>

				<div class="wrap-input100 validate-input" data-validate="Contraseña es requerida">
					<input class="input100" type="password" name="password" placeholder="Contraseña" required value="@Model.password">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
					</div>

					<div class="row">
						<span class="validation-message">@ViewData["message"]</span>
					</div>

					<div class="container-login100-form-btn">
						<button class="login100-form-btn">
							Acceso
						</button>
					</div>

					<div class="text-center p-t-12">

					</div>

					<div class="text-center p-t-136">

					</div>
				</form>
			</div>
		</div>
	</div>